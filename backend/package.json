{
  "name": "emissionsv2-backend",
  "version": "0.1.0",
  "description": "Backend base Node.js + Express + Prisma per Emissionsv2",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "start:prod": "node dist/server.js",
    "docker:build": "docker build -f Dockerfile --target production -t emissionsv2-backend:local .",
    "test": "jest --config jest.config.cjs --runInBand",
    "test:unit": "jest --config jest.config.cjs --runInBand",
    "test:coverage": "jest --config jest.config.cjs --coverage --runInBand",
    "test:integration": "vitest run src/routes",
    "test:vitest": "vitest run src",
    "type-check": "tsc --noEmit",
    "validate:emissions": "tsx src/scripts/run-emissions-validation.ts",
    "prisma:generate": "prisma generate",
    "prisma:validate": "prisma validate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "seed:emissions": "tsx prisma/seed-emissions.ts",
    "seed:admin": "tsx prisma/seed-admin.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed-emissions.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "@sentry/node": "^10.38.0",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.3",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^8.0.1",
    "winston": "^3.19.0",
    "xlsx": "^0.18.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.10",
    "@types/pdfkit": "^0.17.5",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "pdfkit": "^0.17.2",
    "prisma": "^6.16.3",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
